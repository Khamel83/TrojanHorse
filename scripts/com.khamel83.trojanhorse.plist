<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.khamel83.trojanhorse</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/path/to/TrojanHorse/scripts/cron_template.sh</string>
    </array>

    <key>StartInterval</key>
    <integer>600</integer> <!-- 600 seconds = 10 minutes -->

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/Users/yourname/trojanhorse_cron.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/yourname/trojanhorse_cron.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>TROJANHORSE_DIR</key>
        <string>/Users/yourname/TrojanHorse</string>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>

    <key>WorkingDirectory</key>
    <string>/Users/yourname/TrojanHorse</string>
</dict>
</plist>